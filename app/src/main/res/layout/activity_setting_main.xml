<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:ignore="NamespaceTypo"
    android:background="#FFE0D6D7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="#f1493b"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Setting"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#ddded7" />

        </android.support.v7.widget.Toolbar>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@drawable/border_trans">

        <TextView
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:text="          Gender"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textColor="#584044"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/radio_male"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="#584044"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton
                android:id="@+id/radio_famale"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Famale"
                android:textColor="#584044"
                android:onClick="onRadioButtonClicked"/>

        </RadioGroup>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@drawable/border_trans">

        <TextView
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:text="          Sound"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textColor="#584044"/>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="388dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:background="#f1493b">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center">

            <Button
                android:id="@+id/homeBt"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@drawable/home" />
            <TextView
                android:layout_width="40dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/searchBt"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@drawable/search"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/favBt"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@drawable/fav"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/histrBt"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@drawable/history"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/settBt"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@drawable/settings"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>