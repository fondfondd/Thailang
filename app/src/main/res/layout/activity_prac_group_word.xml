<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="#cca28b"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vocabulary"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#101010" />

        </android.support.v7.widget.Toolbar>
    </LinearLayout>

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_trans"
        android:orientation="vertical">

        <TextView
            android:id="@+id/thai"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginRight="30dp"
            android:gravity="right|center"
            android:text="กา"
            android:textSize="24sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="30dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/playBtn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/colorPrimary"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/play1"
                design:srcCompat="@drawable/play1" />

            <TextView
                android:id="@+id/eng"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center"
                android:text="/ka/" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tone1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1" />

        <TextView
            android:id="@+id/tone2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2" />

        <TextView
            android:id="@+id/tone3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="3" />

        <TextView
            android:id="@+id/tone4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="4" />

        <TextView
            android:id="@+id/tone5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="5" />

        <ImageButton
            android:id="@+id/recordBtn"
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:backgroundTint="@color/colorPrimary"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/record"
            design:srcCompat="@drawable/record" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="270dp"
        android:layout_gravity="center"
        android:background="@drawable/border_noborder"
        android:orientation="vertical">

        <TextView
            android:id="@+id/resultText"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/border_trans"
            android:gravity="center"
            android:text="Result"
            android:textSize="15sp" />

        <WebView
            android:id="@+id/webView_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </WebView>

        <TextView
            android:id="@+id/percen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Percentage:"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="#CCA28B"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/homeBt"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="Home"
            android:textSize="10dp" />

        <Button
            android:id="@+id/searchBt"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="Search"
            android:textSize="10dp" />

        <Button
            android:id="@+id/favBt"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="Favorite"
            android:textSize="10dp" />

        <Button
            android:id="@+id/histrBt"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="History"
            android:textSize="10dp" />

        <Button
            android:id="@+id/settBt"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="Setting"
            android:textSize="10dp" />
    </LinearLayout>




</LinearLayout>