<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:ignore="NamespaceTypo"
    android:background="#FFE0D6D7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="#f1493b"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Word"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#c3c7b2" />

        </android.support.v7.widget.Toolbar>

    </LinearLayout>

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_trans"
        android:orientation="vertical">

        <TextView
            android:id="@+id/thai"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginRight="30dp"
            android:gravity="right|center"
            android:text="กา"
            android:textSize="24sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="30dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/playBtn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/colorPrimary"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/play1"
                design:srcCompat="@drawable/play1" />

            <TextView
                android:id="@+id/eng"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center"
                android:text="/ka/" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tone1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1" />

        <TextView
            android:id="@+id/tone2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2" />

        <TextView
            android:id="@+id/tone3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="3" />

        <TextView
            android:id="@+id/tone4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="4" />

        <TextView
            android:id="@+id/tone5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="5" />

        <ImageButton
            android:id="@+id/recordBtn"
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:backgroundTint="@color/colorPrimary"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/record"
            design:srcCompat="@drawable/record" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="265dp"
        android:layout_gravity="center"
        android:background="@drawable/border"
        android:orientation="vertical">

        <TextView
            android:id="@+id/resultText"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/border_trans"
            android:gravity="center"
            android:text="Result"
            android:textStyle="bold"
            android:textColor="#584044"
            android:textSize="15sp" />

        <WebView
            android:id="@+id/webView_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </WebView>

        <TextView
            android:id="@+id/percen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Percentage:"
            android:textColor="#584044"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:background="#f1493b">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center">

            <Button
                android:id="@+id/homeBt"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@drawable/home" />
            <TextView
                android:layout_width="40dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/searchBt"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@drawable/search"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/favBt"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@drawable/fav"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/histrBt"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@drawable/history"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/settBt"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@drawable/settings"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>